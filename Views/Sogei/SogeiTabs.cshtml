@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.RenderingVariants.Extensions
@using Sitecore.XA.Foundation.RenderingVariants.Fields
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@using Sitecore.XA.Foundation.Variants.Abstractions.Fields
@using Sitecore.Mvc.Helpers
@using Sitecore.Mvc


@model Sitecore.XA.Foundation.Variants.Abstractions.Models.VariantsRenderingModel

@if (Model.DataSourceItem != null || Html.Sxa().IsEdit)
{
    <section class="section section-grey">
        <div class="container-fluid py-3 py-md-4">
            <h2>Titolo sezione</h2>
            <div class="bg-white p-3 mb-3 shadow">
                <ul class="nav nav-tabs-reverse flex-column flex-md-row flex-md-nowrap" role="tablist">
                    @if (Model.Item != null)
                    {
                        var counter = 1;
                        foreach (Sitecore.Data.Items.Item subItem in Model.Item.Children)
                        {
                            var activeclass = "";
                            if (counter == 1)
                            {
                                activeclass = "show active";
                            }
                            <li class="nav-item text-md-center">
                                <a href="#tab-reverse-@counter" class="nav-link h-100 @activeclass" data-toggle="tab" aria-controls="tab-reverse-@counter" aria-expanded="true" role="tab">
                                    <i class="fab fa-font-awesome-flag mr-2"></i>@Html.Raw(Html.Sitecore().Field("Tab Name", Model.Item))
                                </a>
                            </li>
                        }
                    }
                </ul>
                <div class="tab-content tab-content-reverse">
                    @if (Model.Item != null)
                    {
                        var counter = 1;
                        foreach (Sitecore.Data.Items.Item subItem in Model.Item.Children)
                        {
                            var showactiveclass = "";
                            if (counter == 1)
                            {
                                showactiveclass = "show active";
                            }
                            <div id="tab-reverse-@counter" class="tab-pane fade @showactiveclass" role="tabpanel">
                                <h3>@Html.Sitecore().Field("Title", Model.Item)</h3>
                                @Html.Sitecore().Field("Text", Model.Item)
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </section>
