@using Sitecore.Mvc.Helpers
@using Sitecore.Mvc


@model Sitecore.XA.Foundation.Variants.Abstractions.Models.VariantsRenderingModel

@if (Model.DataSourceItem != null || Html.Sxa().IsEdit)
{
    <div class="card card-simple px-3 shadow">
        <div class="card-body">
            <h3 class="card-title">@Html.Sitecore().Field("Title", Model.Item)</h3>
            <span class="text-muted"><i class="far fa-calendar-alt mr-2"></i>@Html.Sitecore().Field("Date", Model.Item)</span>
            <p>
                @Html.Sitecore().Field("Intro", Model.Item)
                <a href="" aria-label="Leggi ...">Leggi</a>
            </p>
            <span class="text-muted"><i class="far fa-calendar-alt mr-2"></i>Data</span>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipisci elit, sed do eiusmod tempor incidunt ut labore et dolore magna aliqua...
                <a href="" aria-label="Leggi ...">Leggi</a>
            </p>
        </div>
        <div class="card-footer">
            <ul class="list-inline d-flex mb-0">
                <li class="list-inline-item">
                    <a href="" aria-label="Visualizza PDF ..." title="Visualizza PDF">
                        <i class="far fa-file-pdf fa-2x"></i>
                    </a>
                </li>
                <li class="list-inline-item ml-auto">
                    <a href="" aria-label="Tutta la sezione ..." title="Tutta la sezione">
                        <i class="far fa-arrow-alt-circle-right fa-2x"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
